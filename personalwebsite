import React, { useState, useEffect, useRef } from 'react';
import { motion } from 'framer-motion';

const SocialFabricWebsite = () => {
  const [activeSection, setActiveSection] = useState('about');
  const sectionRefs = {
    about: useRef(null),
    previousProjects: useRef(null),
    currentProjects: useRef(null)
  };

  const scrollToSection = (sectionId) => {
    sectionRefs[sectionId].current.scrollIntoView({ 
      behavior: 'smooth' 
    });
    setActiveSection(sectionId);
  };

  const AnimatedTypewriter = ({ children }) => {
    const [displayText, setDisplayText] = useState('');

    useEffect(() => {
      if (children) {
        let i = 0;
        const typingEffect = setInterval(() => {
          if (i < children.length) {
            setDisplayText(prevText => prevText + children.charAt(i));
            i++;
          } else {
            clearInterval(typingEffect);
          }
        }, 50);

        return () => clearInterval(typingEffect);
      }
    }, [children]);

    return (
      <h2 className="text-4xl font-light text-black">
        {displayText}
        <span className="animate-pulse">|</span>
      </h2>
    );
  };

  const SectionContent = ({ title, content, accentWords = [] }) => {
    const highlightWords = (text, accentWords) => {
      return text.split(' ').map((word, index) => 
        accentWords.includes(word) ? (
          <span 
            key={index} 
            className="text-[#2F4F4F] border-b-2 border-[#2F4F4F] transition-all duration-300"
          >
            {word}{' '}
          </span>
        ) : (
          <span key={index}>{word} </span>
        )
      );
    };

    return (
      <motion.div 
        initial={{ opacity: 0, y: 50 }}
        whileInView={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.7, ease: 'easeOut' }}
        className="max-w-2xl mx-auto text-center"
      >
        <AnimatedTypewriter>
          {title}
        </AnimatedTypewriter>
        <p className="mt-6 text-lg font-light leading-relaxed">
          {highlightWords(content, accentWords)}
        </p>
      </motion.div>
    );
  };

  const Navigation = () => (
    <nav className="fixed top-0 left-0 right-0 z-50 bg-white/50 backdrop-blur-md">
      <div className="max-w-4xl mx-auto flex justify-center space-x-8 py-4">
        {Object.keys(sectionRefs).map((section) => (
          <button
            key={section}
            onClick={() => scrollToSection(section)}
            className={`
              text-sm uppercase tracking-wider 
              relative group transition-colors
              ${activeSection === section ? 'text-[#2F4F4F]' : 'text-black'}
            `}
          >
            {section.replace(/([A-Z])/g, ' $1').trim()}
            <span 
              className={`
                absolute bottom-0 left-0 w-0 h-0.5 
                bg-[#2F4F4F] transition-all duration-300
                group-hover:w-full
                ${activeSection === section ? 'w-full' : ''}
              `}
            />
          </button>
        ))}
      </div>
    </nav>
  );

  return (
    <div className="bg-white text-black font-roboto">
      <Navigation />
      
      <section 
        ref={sectionRefs.about} 
        className="min-h-screen flex items-center justify-center px-4"
      >
        <SectionContent 
          title="About Me: The Social Fabric"
          content="I am a design strategist and cultural architect, weaving narratives of connection through spatial and digital experiences. My work explores the intersections of community, technology, and human interaction."
          accentWords={['design', 'architect']}
        />
      </section>

      <section 
        ref={sectionRefs.previousProjects} 
        className="min-h-screen flex items-center justify-center px-4"
      >
        <SectionContent 
          title="Previous Projects: Designing Connections"
          content="From urban regeneration initiatives to digital community platforms, my previous projects have focused on creating spaces—both physical and virtual—that foster meaningful human interactions and social transformation."
          accentWords={['urban', 'digital']}
        />
      </section>

      <section 
        ref={sectionRefs.currentProjects} 
        className="min-h-screen flex items-center justify-center px-4"
      >
        <SectionContent 
          title="Current Projects: Reimagining Social Infrastructure"
          content="Currently exploring innovative approaches to community design, leveraging emerging technologies and participatory methodologies to create adaptive, resilient social ecosystems."
          accentWords={['innovative', 'adaptive']}
        />
      </section>
    </div>
  );
};

export default SocialFabricWebsite;
